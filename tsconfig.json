{
   "compilerOptions": {
      "strict": true,
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "useDefineForClassFields": true,
      "composite": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "allowJs": true,
      "checkJs": false,
      "outDir": "dist", // 设置allowJS为true后必须设置outDir，否则编译器会报错
      "baseUrl": "./",
      "isolatedModules": true,
      "skipLibCheck": true,
      "paths": {
         "@/*": ["src/*"]
      },
      "types": ["vite/client", "element-plus/global"],
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
   },
   "include": [
      "vite.config.ts",
      "plugins/**/*.ts",
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
   ]
}
